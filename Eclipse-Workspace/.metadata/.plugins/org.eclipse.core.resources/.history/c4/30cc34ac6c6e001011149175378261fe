package br.com.senaisp.bauru.secao03.aula04;

public class Chickens01 {

	public static void main(String[] args) {
		int totalEggs = 0;
		int eggsPerChicken = 5, chickenCount = 3;
		// 1ยบ dia
		totalEggs += eggsPerChicken * chickenCount; // cada galinha produz 5 ovos, totalizando 15 ovos
		// 2ยบ dia
		chickenCount++; // ganhou uma galinha. Temos agora 4 galinhas
		totalEggs += eggsPerChicken * chickenCount; // galinhas produziram 20 ovos, somando com 15 ovos anteriores, totaliza 35 ovos
		// 3ยบ dia
		chickenCount /= 2; // animal come metade das galinhas. Agora temos 2 galinhas.
		totalEggs += eggsPerChicken * chickenCount; // galinhas produziram 10 ovos, somando com 35 ovos anteriores, totaliza 45 ovos
		// imprimir o total
		System.out.println(totalEggs); // 45
	}

}
